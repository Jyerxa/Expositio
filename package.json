{
  "name": "expositio",
  "version": "3.0.0",
  "description": "Enterprise-grade presentation template system with 4 professional themes, comprehensive TypeScript configuration, and production-ready components",
  "type": "module",
  "main": "./dist/main.js",
  "types": "./dist/main.d.ts",
  "exports": {
    ".": {
      "import": "./dist/main.js",
      "types": "./dist/main.d.ts"
    },
    "./styles": "./dist/main.css"
  },
  "files": [
    "dist",
    "src",
    "docs",
    "examples"
  ],
  "scripts": {
    "dev": "vite serve",
    "build": "vite build && tsc --emitDeclarationOnly",
    "preview": "vite preview",
    "serve": "vite preview --port 8080 --strictPort",
    "type-check": "tsc --noEmit",
    "lint": "npm run lint:ts && npm run lint:styles",
    "lint:ts": "eslint src/**/*.{ts,js} --fix",
    "lint:styles": "stylelint src/styles/**/*.scss --fix",
    "format": "prettier --write src/**/*.{ts,js,scss,html,md}",
    "test": "playwright test",
    "test:headed": "playwright test --headed",
    "test:visual": "playwright test tests/visual/",
    "test:unit": "vitest",
    "test:coverage": "vitest --coverage",
    "analyze": "vite-bundle-analyzer dist/stats.json",
    "clean": "rimraf dist",
    "prepare": "husky install",
    "theme:create": "node tools/create-theme.js",
    "component:create": "node tools/create-component.js",
    "docs:dev": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs"
  },
  "keywords": [
    "presentation",
    "template",
    "reveal.js",
    "slides",
    "typescript",
    "scss",
    "professional",
    "enterprise",
    "modular",
    "responsive",
    "themes",
    "corporate",
    "academic",
    "minimal",
    "starship",
    "hot-swappable",
    "event-driven",
    "performance-optimized"
  ],
  "author": {
    "name": "Professional Presentation Template",
    "email": "contact@presentation-template.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/presentation-template/starship.git"
  },
  "bugs": {
    "url": "https://github.com/presentation-template/starship/issues"
  },
  "homepage": "https://presentation-template.github.io/starship",
  "engines": {
    "node": ">=16.0.0",
    "npm": ">=8.0.0"
  },
  "dependencies": {
    "reveal.js": "^5.0.4"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "@types/node": "^20.11.0",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitejs/plugin-legacy": "^5.3.0",
    "@vitest/coverage-v8": "^1.2.0",
    "autoprefixer": "^10.4.17",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.0",
    "husky": "^9.0.0",
    "lint-staged": "^15.2.0",
    "postcss": "^8.4.33",
    "prettier": "^3.2.0",
    "rimraf": "^5.0.0",
    "sass": "^1.70.0",
    "stylelint": "^16.2.0",
    "stylelint-config-standard-scss": "^13.0.0",
    "stylelint-order": "^6.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.1.0",
    "vite-bundle-analyzer": "^0.7.0",
    "vite-plugin-dts": "^3.7.0",
    "vitepress": "^1.0.0",
    "vitest": "^1.2.0"
  },
  "lint-staged": {
    "src/**/*.{ts,js}": [
      "eslint --fix",
      "prettier --write"
    ],
    "src/**/*.scss": [
      "stylelint --fix",
      "prettier --write"
    ],
    "*.{md,json}": [
      "prettier --write"
    ]
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}